<div class="section blue lighten-5" id="index-banner">
	<div class="container">
		<div class="row">
			<div class="col s12 m12">
				<h4 class="header center-on-small-only pink-text darken-4">Your Profile
				</h4>

				{{#if diagnosis}}{{#each diagnosis}}

				<div class="col s12">
					<div class="card blue-grey darken-1">
						<div class="card-tabs">
							<ul class="tabs tabs-fixed-width">
								<li class="tab"><a href="#{{request_id}}test4">When</a></li>
								<li class="tab"><a class="active" href="#{{request_id}}test5">Diagnosis</a></li>
								<li class="tab"><a href="#{{request_id}}test6">Text</a></li>
							</ul>
						</div>
						<div class="card-content grey lighten-4">
							<div id="{{request_id}}test4">
								<span class="card-title"><span class="grey-text text-lighten-1">We made this diagnosis on: </span><br>{{ time }}</span>
							</div>
							<div id="{{request_id}}test5">
								<span class="card-title"><span class="grey-text text-lighten-1">Condition: </span>
							{{ condition_name }}</span>
							<p>
								Diagnosis based on the following symptoms:
								<ol>
									{{#each this.symptoms}}
										<li>{{symptom_name}}</li>
									{{/each}}
								</ol>
							</p>
						</div>
						<div id="{{request_id}}test6">
							<span class="card-title grey-text text-lighten-1">What you told us: </span><br>{{search_text}}</div>
					</div>
					<div class="card-action activator">
						<a href="#" class="activator">Delete this</a>
					</div>
					<div class="card-reveal">
						<span class="card-title red-text">Are you sure?<i class="material-icons right">close</i></span>
						<br>
						<p>Are you sure you want to delete this? <br>You will never be able to get this information back.</p><br>
						<form action="/remove-request/{{request_id}}"" method="post"">
							<button class="btn waves-effect waves-light red" type="submit" name="delete">Delete
						    <i class="material-icons right">delete_forever</i>
						  </button>
						</form>
					</div>
				</div>
			</div>
			{{/each}}{{/if}}
		</div>
	</div>
</div>
</div>